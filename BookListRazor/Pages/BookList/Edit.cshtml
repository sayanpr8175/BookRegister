@page
@model BookListRazor.Pages.BookList.EditModel



<br />
<h2 class="text-info">Edit Book </h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="B.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="B.Name"></label>
            </div>

            <div class="col-6">
                <input asp-for="B.Name" class="form-control" />
            </div>

            <span asp-validation-for="B.Name" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="B.Author"></label>
            </div>


            <div class="col-6">
                <input asp-for="B.Author" class="form-control" />
            </div>

            <span asp-validation-for="B.Author" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="B.ISBN"></label>
            </div>


            <div class="col-6">
                <input asp-for="B.ISBN" class="form-control" />
            </div>

            <span asp-validation-for="B.ISBN" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">

                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>

            <div class="col-3">

                <a asp-page="Index" class="btn btn-success form-check-control">Back to List</a>
            </div>


        </div>

    </form>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
